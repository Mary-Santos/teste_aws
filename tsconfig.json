{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "declaration": true,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  